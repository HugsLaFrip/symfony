{% extends 'base.html.twig' %}

{% block title %}
	Liste des clients
{% endblock %}

{% block body %}
	<h1>Liste des clients</h1>
	<a href="{{ path('customers_create') }}" class="btn btn-success">Cr√©er un nouveau client</a>
	<table class="table">
		<thead>
			<tr>
				<th>Client</th>
				<th>Email</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for c in customers %}
				<tr>
					<td>{{ c.fullName }}</td>
					<td>{{ c.email }}</td>
					<td>
						<a href="{{ path('customers_edit', {'id': c.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
						<a href="{{ path('customers_delete', {'id': c.id}) }}" class="btn btn-danger btn-sm ml-1">Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
